<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
           font-family: Arial, sans-serif;
           background-color: rgba(111, 39, 39, 0.861);
        }
        form, table {
           width: 100%;
           max-width: 700px;
           margin: 0 auto;
           background-color: #e8ba96cf;
           border-radius: 5px;
           padding: 20px;
           box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
        }
        input[type="text"],
        select {
            width: 92%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }
        input[type="submit"],
        button {
            background-color: #333;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }
        table {
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }
        /* Button within table styling */
        table button {
            background-color: #333;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            text-decoration: none;
        }

        /* Button text link styling */
        table button a {
            color: white;
            text-decoration: none;
        }

    </style>
</head>
<body>
    <form action="/insertData" method="post">
        <table border="2">
            <tr>
                <td>Book Name</td>
                <td><input type="text" name="name"></td>
            </tr>
            <tr>
                <td>Book Price</td>
                <td><input type="text" name="price"></td>
            </tr>
            <tr>
                <td>Book Pages</td>
                <td>
                    <select name="pages">
                        <option>--- Select Pages ---</option>
                        <% 
                            let pages = ['0-100','100-200','200-300','300-400','400-500'];
                            pages.map((v)=>{
                        %> 
                        <option><%= v %></option>
                        <% }) %>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Book Author</td>
                <td><input type="text" name="author"></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit"></td>
            </tr>
        </table>
    </form>
    <br><br>  
    <table border="2">
        <tr>
            <td>Book Name</td>
            <td>Book Price</td>
            <td>Book Pages</td>
            <td>Book Author</td>
            <td>Action</td>
        </tr>
        <% success.map((v)=>{ %>
            <tr>
                <td><%= v.name %></td>
                <td><%= v.price %></td>
                <td><%= v.pages %></td>
                <td><%= v.author %></td>
                <td>
                    <button>
                        <a href="/deleteData?id=<%= v.id%>">Delete</a>
                    </button>
                    <button>
                        <a href="/editData?id=<%= v.id%>">Edit</a>
                    </button>
                </td>
            </tr>
        <% }) %>
    </table>
</body>
</html>